#! /bin/bash
num=1
if [[ $num -le 0 ]];
then
        echo debes introducir al menos un parametro
else
        echo numero de parametros = $num
fi
############################################################################
chmod +x 03-hola-al-menos-1-parametro.sh
./03-hola-al-menos-1-parametro.sh
